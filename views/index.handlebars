<!--================Add a Burger Area =================-->
<section class="adding-burger-area">
  <div class="container">
    <div class="row">
      <div class="col-md-12 s_white_title justify-content-center ">
        <h3>Welcome to Burger Heaven</h3>
        <form class="create-form">

          <div class="form-group">
            <input type="text" id="ca" name="name">
          </div>

          <div class="form-group">
            <input type="radio" name="devour" value="1" checked> Wait to Devour<br>
            <input type="radio" name="devour" value="0"> Devour
          </div>

          <button class="btn btn-primary" type="submit">Add Burger</button>
        </form>
      </div>
    </div>
  </div>
  </div>
</section>

<!--================Burgers Note Devoured Area =================-->
<h2>Juicy Burgers waiting to be devoured!</h2>
<section class="burger-area">
  <div class="container">
    <div class="row">
      <div class="col-md-12 "></div>
    <ul>
      {{#each burgers}}
      {{#if devour}}
      {{> burgers/burger-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>
    </div>
  </div>
  </div>
</section>
{{!-- =========== Burger Devoured Area =================--}}
<h2>Burgers devoured!</h2>
<section class="burger-area">
  <div class="container">
    <div class="row">
    <ul>
      {{#each burgers}}
      {{#unless devour}}
      {{> burgers/burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>
    </div>
  </div>
</section>